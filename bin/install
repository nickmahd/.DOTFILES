#!/bin/bash

# nickmahda@gmail.com

cd "$(dirname "${BASH_SOURCE[0]}")" || exit 1

DIR=$(pwd)

git submodule update --init --recursive --remote --merge

while getopts "c" o; do
    case "$o" in
        c) c=1;;
    esac
done

./lnfix -b

if [[ "$OSTYPE" == "darwin"* ]]; then
    if [[ -z "$(which brew)" ]]; then
        /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install.sh)"
    fi

    /opt/homebrew/bin/brew install coreutils gcc nano pkg-config python tmux vim youtube-dl zsh

    if [[ "$c" ]]; then
        /opt/homebrew/bin/brew cask install discord dozer flux google-drive google-chrome iterm2 karabiner-elements slack spotify the-unarchiver telegram visual-studio-code
        # appcleaner latest omnidisksweeper overkill selfcontrol ticktick vnc-viewer zotero
    fi

elif [[ "$OSTYPE" == "linux"* ]]; then
    sudo apt update
    sudo apt install git pkg-config python3-pip tmux vim zsh
fi

echo "Done"

cd "$DIR" || exit
